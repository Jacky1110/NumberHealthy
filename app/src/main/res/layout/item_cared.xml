<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_cared_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0900222111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_carted_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="授權中"
        app:layout_constraintStart_toEndOf="@+id/tv_cared_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_cared_edit_name"/>

    <TextView
        android:id="@+id/tv_cared_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編輯名稱"
        android:textColor="@color/blue"
        app:layout_constraintStart_toEndOf="@+id/tv_carted_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_cared_del"/>

    <TextView
        android:id="@+id/tv_cared_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消關注"
        android:textColor="@color/c_c62933_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>